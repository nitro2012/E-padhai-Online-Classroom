<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:id="@+id/about_heading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="E-Padhai v1.0.0"
                android:textAlignment="center"
                android:textSize="35sp"
                android:fontFamily="@font/montserratbold"
                android:textColor="@color/cardview_dark_background"
                android:layout_marginTop="20dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal">

                <ImageView
                    android:id="@+id/about_app_logo"
                    android:layout_width="100dp"
                    android:layout_height="110dp"
                    android:layout_marginTop="100dp"
                    android:layout_marginBottom="500dp"
                    android:src="@mipmap/ic_launcher" />


            </LinearLayout>


            <TextView
                android:id="@+id/about_content"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="15sp"
                android:fontFamily="@font/montserratlight"
                android:justificationMode="inter_word"
                android:text="@string/about_content"
                android:layout_marginTop="250dp"
                android:layout_marginHorizontal="16dp" />

            <TextView
                android:id="@+id/findus_heading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/about_content"
                android:layout_marginTop="20dp"
                android:text="Find Us"
                android:textAlignment="center"
                android:textColor="@color/cardview_dark_background"
                android:textSize="25sp"
                android:fontFamily="@font/montserratregular"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/findus_map"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/findus_heading"
                app:cardCornerRadius="12dp"
                android:elevation="2dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="6dp"
                android:layout_marginHorizontal="6dp"
                app:cardUseCompatPadding="true">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:src="@drawable/classback"
                    android:scaleType="fitXY"/>

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_below="@+id/findus_map"
                android:layout_marginTop="20dp"
                android:background="@color/purple_500">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginVertical="16dp"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/contact_details"
                        android:textSize="15sp"
                        android:textColor="#fff"
                        android:fontFamily="@font/montserratlight" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="6dp"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="16dp"
                        android:textAlignment="center"
                        android:text="Department"
                        android:textSize="15sp"
                        android:textColor="#fff"
                        android:fontFamily="@font/montserratlight" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="16dp"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="44dp"
                        android:textAlignment="center"
                        android:text="address"
                        android:textSize="15sp"
                        android:textColor="#fff"
                        android:fontFamily="@font/montserratlight" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="16dp"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="your-email"
                        android:autoLink="email"
                        android:textSize="15sp"
                        android:textColorLink="#ffffff"
                        android:fontFamily="@font/montserratlight" />


                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="16dp"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="your-email"
                        android:autoLink="email"
                        android:textSize="15sp"
                        android:textColorLink="#ffffff"
                        android:fontFamily="@font/montserratlight" />


                </LinearLayout>



            </LinearLayout>

        </RelativeLayout>
    </ScrollView>

</LinearLayout>